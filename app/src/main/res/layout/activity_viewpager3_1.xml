<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragf3_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp">

                <ImageButton
                    android:id="@+id/allBtn"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/every_off" />

                <ImageView
                    android:id="@+id/all_img"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:background="@drawable/every_on" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp">

                <ImageButton
                    android:id="@+id/readBtn"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/read_off" />

                <ImageView
                    android:id="@+id/read_img"
                    android:layout_width="35dp"
                    android:visibility="gone"
                    android:layout_height="25dp"
                    android:background="@drawable/read_on" />

            </FrameLayout>

            <TextView
                android:id="@+id/phone_rank"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frag3_1"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/frag3_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</LinearLayout>
