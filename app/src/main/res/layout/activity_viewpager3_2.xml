<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/join_btn" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="수익률"
            android:textColor="@color/textGray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/high_checkBox"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/high"
                android:button="@null" />

            <CheckBox
                android:id="@+id/row_checkBox"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/row"
                android:button="@null" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/join_btn" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="구독자"
            android:textColor="@color/textGray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/many_checkBox"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/many"
                android:button="@null" />

            <CheckBox
                android:id="@+id/little_checkBox"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/little"
                android:button="@null" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/join_btn" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="전문가"
            android:textColor="@color/textGray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/human_checkBox"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/human"
                android:button="@null" />

            <CheckBox
                android:id="@+id/robot_checkBox"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/robot"
                android:button="@null" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/rankEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/textGray"
            android:textSize="16dp"
            android:textCursorDrawable="@color/textGray"
            android:hint="닉네임을 입력해주세요"
            android:textStyle="bold"
            android:textColorHint="@color/textLightColor"/>

        <ImageButton
            android:id="@+id/rankDelete_btn"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:background="@drawable/img_close"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center|right"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="49dp">

        <ImageButton
            android:id="@+id/rankCancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rankcancel_btn"/>

        <ImageButton
            android:id="@+id/rankSearch_btn"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ranksearch_btn"/>
    </LinearLayout>

    <TextView
        android:id="@+id/rank_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
