<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/nickedit_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/nickBack_btn"
                android:layout_width="13dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/img_arrow_01b" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="닉네임 변경"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center|left"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nick_hp"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:text="확인"
                android:textColor="#00ff0000"
                android:textSize="7dp"/>

            <Button
                android:id="@+id/nickOk_Btn"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="#00ff0000"
                android:onClick="OnNickSet" />
        </FrameLayout>
    </LinearLayout>
\
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textLightColor"
        android:text="닉네임"
        android:textSize="15dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nickEdit_text"
            android:layout_width="match_parent"
            android:hint="현재 닉네임"
            android:textColor="@color/textGray"
            android:maxLength="12"
            android:maxLines="1"
            android:inputType="text"
            android:textCursorDrawable="@drawable/cusrsor_color"
            android:layout_height="50dp" />

            <ImageButton
                android:id="@+id/nickDelete_Btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/img_close"
                android:layout_gravity="center|right"
                android:layout_marginRight="7dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/nickNum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/12"
            android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
